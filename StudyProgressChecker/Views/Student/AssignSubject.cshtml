@model StudyProgressChecker.Models.Student

<h1>Assign Subjects to @Model.FirstName @Model.LastName</h1>

<form asp-action="AssignSubject">
    <input type="hidden" name="id" value="@Model.UniversityId" />
    <div class="form-group">
        <label>Subjects</label>
        <div>
            @foreach (var subject in ViewBag.AllSubjects)
            {
                bool isChecked = Model.PreferredSubjects.Any(s => s.Name == subject.Name);
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="selectedSubjects" value="@subject.Name"
                           id="subject-@subject.Name" @(isChecked ? "checked" : "")>
                    <label class="form-check-label" for="subject-@subject.Name">
                        @subject.Name
                    </label>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>