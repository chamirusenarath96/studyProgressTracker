@model List<StudyProgressChecker.Models.Student>

<h1>Students</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>University ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Year of Study</th>
            <th>Preferred Subjects</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.UniversityId</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.YearOfStudy</td>
                <td>
                    @string.Join(", ", student.PreferredSubjects.Select(s => s.Name))
                </td>
                <td>
                    <a asp-action="AssignSubject" asp-route-id="@student.UniversityId" class="btn btn-sm btn-info">Assign Subject</a>
                    <a asp-action="Delete" asp-route-id="@student.UniversityId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="StudySession" asp-action="StudentProgress" asp-route-id="@student.UniversityId" class="btn btn-primary">View Progress</a>
                </td>
            </tr>
        }
    </tbody>
</table>