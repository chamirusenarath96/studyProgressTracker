@model List<StudyProgressChecker.Models.Subject>
<h2>Edit All Subjects</h2>
<form asp-action="EditAll" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Weight</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model[i].Name" class="form-control" />
                        <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="@Model[i].Weight" class="form-control" />
                        <span asp-validation-for="@Model[i].Weight" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save All</button>
</form>